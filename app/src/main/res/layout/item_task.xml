<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/item_task_check_box_complete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/item_task_text_view_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_task_check_box_complete"
        android:textStyle="bold"
        android:padding="4dp"
        tools:text="@string/text_title"/>

    <TextView
        android:id="@+id/item_task_text_view_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_task_check_box_complete"
        android:layout_below="@id/item_task_text_view_title"
        android:padding="4dp"
        tools:text="@string/text_date"/>
</RelativeLayout>